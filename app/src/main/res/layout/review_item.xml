<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/synopsis_left_margin"
    android:layout_marginTop="@dimen/review_top_margin"
    android:layout_marginRight="@dimen/review_right_margin">

    <LinearLayout
        android:id="@+id/backgroundReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/trailer_review_selector">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/review_author_layout_margin_bottom"
                android:textSize="@dimen/review_author_font_size" />

            <TextView
                android:id="@+id/reviewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:layout_marginBottom="@dimen/review_content_layout_margin_bottom"
                android:textSize="@dimen/review_content_font_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgReadMoreReview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/read_more_review"
            android:paddingRight="@dimen/review_right_padding"/>

    </LinearLayout>
</android.support.v7.widget.CardView>